<UserControl x:Class="MIDITrailRender.Views.AdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:ZenithEngine.UI;assembly=ZenithEngine" 
             xmlns:local="clr-namespace:MIDITrailRender.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl Margin="10">
        <TabItem Header="{ui:LangText mods.miditrail.tabs.general}">
            <local:GeneralView/>
        </TabItem>
        <TabItem Header="{ui:LangText mods.miditrail.tabs.camera}">
            <local:CameraView/>
        </TabItem>
        <TabItem Header="{ui:LangText mods.miditrail.tabs.glow}">
            <local:GlowView/>
        </TabItem>
        <TabItem Header="{ui:LangText mods.miditrail.tabs.keys}">
            <local:KeysView/>
        </TabItem>
        <TabItem Header="{ui:LangText mods.miditrail.tabs.notes}">
            <local:NotesView/>
        </TabItem>
        <TabItem Header="{ui:LangText mods.miditrail.tabs.light}">
            <local:LightView/>
        </TabItem>
    </TabControl>
</UserControl>
